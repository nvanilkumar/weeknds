<h1>Listing experiences</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Photourl</th>
    <th>Isactive</th>
    <th>Defaultprice</th>
    <th>Minimumseats</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @experiences.each do |experience| %>
  <tr>
    <td><%= experience.title %></td>
    <td><%= experience.description %></td>
    <td><%= experience.photourl %></td>
    <td><%= experience.isactive %></td>
    <td><%= experience.defaultprice %></td>
    <td><%= experience.minimumseats %></td>
    <td><%= link_to 'Show', experience %></td>
    <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
    <td><%= link_to 'Destroy', experience, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

